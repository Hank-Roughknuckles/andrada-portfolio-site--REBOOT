<!DOCTYPE html>
<html>
<head>
  <title>
    <%= make_title(yield :title) %>
  </title>
    <%= render 'shared/layout_head_tags' %>
    <%= stylesheet_link_tag     "nav" %>
    <%= yield(:head) %>
</head>

<body>
  <div class="overlay"></div> <!-- used when a tile is clicked -->

  <%= render 'nav' %>
  <%= render 'titlebar' %>

  <div class="table">
    <aside class="table-cell">
      <h1><%= yield(:header) %></h1>
    </aside>

    <main class="table-cell">
      <%= yield %>

      <div class="table">
        <div class="table-row">
          <div class="notice table-cell"></div>
        </div>
        <div class="table-row">
          <div class="alert table-cell"></div>
        </div>

        <div class="table-row">
          <%= render 'shared/layout_sign_in_links' %>
        </div>
      </div>
    </main>
  </div>


  <%# <%= debug(params) if Rails.env.development? %>

</body>
</html>

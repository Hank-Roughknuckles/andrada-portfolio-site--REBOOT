<% content_for :head do %>
  <%= stylesheet_link_tag "works" %>
  <%= render "shared/grid_slider_head_tags" %>
<% end %> 

<% content_for :breadcrumbs do %>
  <%= render "shared/works/breadcrumbs", collection: @video_collection %>
<% end %>


<div id="works-grid" class="grid-slider">
  <ul class="gs-list">
    <%= render 'shared/works/grid_elements', collections: collections,
      works: works%>
  </ul>

  <% if user_signed_in? %>
    <% if params[:controller] =~ /video/ %>
      <% collection_destination = new_video_collection_path %>
      <% work_destination = new_video_work_path %>
      <% new_work_text = "New Video" %>
    <% end %>
    <% if params[:controller] =~ /photo/ %>
      <% collection_destination = new_photo_collection_path %>
      <% work_destination = new_photo_work_path %>
      <% new_work_text = "New Photo" %>
    <% end %>


    <%= link_to "", collection_destination, 
      class:  "glyphicon glyphicon-book new-collection",
      title:  "New collection" %>
    <%= link_to "", collection_destination, 
      class:  "glyphicon glyphicon-plus-sign new-work",
      title:  new_work_text %>
    <br>
  <% end %>
</div>

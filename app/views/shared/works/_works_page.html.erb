<% content_for :head do %>
  <%= stylesheet_link_tag "works" %>
<% end %> 

<% content_for :breadcrumbs do %>
  <%= render "shared/works/breadcrumbs", collection: @video_collection %>
<% end %>



<div class="works">
  <%= render 'shared/works/collections_tiles', collections: collections %>
  <%= render 'shared/works/works_tiles', works: works %>
</div>

<br>

<% if user_signed_in? %>

  <% if params[:controller] =~ /video/ %>
    <% collection_destination = new_video_collection_path %>
    <% work_destination = new_video_work_path %>
  <% end %>
  <% if params[:controller] =~ /photo/ %>
    <% collection_destination = new_photo_collection_path %>
    <% work_destination = new_photo_work_path %>
  <% end %>


  <%= link_to 'New Video Collection', collection_destination %>
  <%= link_to 'New Video Entry', work_destination %>
<% end %>
